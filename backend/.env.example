# BlockCoop M-Pesa Backend Environment Configuration
# Copy this to .env and fill in your actual values

# Application Configuration
NODE_ENV=development
PORT=3001

# Domain Configuration
FRONTEND_URL=http://localhost:5173
API_BASE_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:5173
CALLBACK_BASE_URL=http://localhost:3001

# Database Configuration (SQLite for development)
DATABASE_PATH=./data/mpesa_development.db
DATABASE_URL=sqlite:./data/mpesa_development.db

# M-Pesa Sandbox Configuration
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your_sandbox_consumer_key_here
MPESA_CONSUMER_SECRET=your_sandbox_consumer_secret_here
MPESA_BUSINESS_SHORT_CODE=174379
MPESA_PASSKEY=your_sandbox_passkey_here
MPESA_INITIATOR_NAME=testapi
MPESA_SECURITY_CREDENTIAL=your_security_credential_here

# M-Pesa API URLs
MPESA_BASE_URL=https://sandbox.safaricom.co.ke
MPESA_CALLBACK_URL=http://localhost:3001/api/mpesa/callback
MPESA_TIMEOUT_URL=http://localhost:3001/api/mpesa/timeout

# Blockchain Configuration (BSC Testnet)
BSC_RPC_URL=https://bsc-testnet.public.blastapi.io
BLOCKCHAIN_CHAIN_ID=97
USDT_ADDRESS=0x52f8BE86c4157eF5F11f3d73135ec4a568B02b90
PACKAGE_MANAGER_ADDRESS=0xF7075036dBd8d393B4DcF63071C3eF4abD8f31b9
PRIVATE_KEY=your_treasury_wallet_private_key_here

# Security Configuration
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters
API_KEY=your_secure_api_key_for_admin_endpoints_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Rate Limiting
API_RATE_LIMIT=100
PAYMENT_RATE_LIMIT=3

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
ERROR_LOG_FILE=./logs/error.log

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Currency Exchange
USD_TO_KES_RATE=149.25
EXCHANGE_RATE_UPDATE_INTERVAL=3600000

# Recovery System
RECOVERY_ENABLED=true
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=300000

# Development Settings
DEBUG=true
VERBOSE_LOGGING=true
